<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nalnal.dialecttranslation.VoiceRecognitionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="'시작'을 누르고 말씀하세요."
        android:textSize="23dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="시작"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/button"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/resultTitle"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#30d5c8"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="▶"
        android:textSize="20dp"
        android:textColor="#30d5c8"
        android:layout_alignTop="@+id/textLog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/resultIndicator" />
    <TextView
        android:id="@+id/textLog"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/resultTitle"
        android:layout_toRightOf="@+id/resultIndicator"
        android:layout_toEndOf="@+id/resultIndicator" />
</RelativeLayout>
